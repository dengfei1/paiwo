  <view class='container'>
   
      <view class='box'>

        <form bindsubmit="formSubmit" bindreset="formReset">
          <view class='content white  rela'>
            <view class='section__title f4 iconfont icon-yuandianzhong'>投诉类型</view>
            <view class='type'>
              <picker class='picker bo f3' mode="selector" bindchange="bindCompTyle" value="{{compValue}}" range="{{compTypeArr}}" name='comp' style='width:97%;height:50rpx;line-height:50rpx;padding:10rpx'>
                    <text class='f3'>{{compTypeArr[compValue]}}</text>
                    <text class='iconfont icon-tubiao-' style='margin-left:20rpx'></text>
              </picker>
            </view>
            <view class='section__title f4 iconfont icon-yuandianzhong'>投诉内容</view>
            <textarea placeholder='请阐述您想投诉的内容！' class='bo f3 ' style='width:96%;padding:12rpx;height:200rpx' name='content' placeholder-style="color:#e2e2e2;"></textarea>
            <view class='section__title f4 iconfont icon-yuandianzhong'>联系方式</view>
            <view class='named'>
              <input name="userName" placeholder="请输入联系人姓名" class='bo dis f3 ' style='width:97%;height:50rpx;padding:10rpx' type='text' placeholder-style="color:#e2e2e2;" />
            </view>
            <view class='phone' style='height:100rpx'>
              <input name="tel" class='bo dis f3 ' style='width:97%;height:50rpx;padding:10rpx;margin-top:10rpx;' type="number" maxlength="11" minlength="11" placeholder="请输入联系人手机号" bindblur="mobileBlurFocus" placeholder-style="color:#e2e2e2;" />
            </view>
            <view class='address'>
              <input name="address" placeholder="请输入联系人地址" class='bo dis f3 ' style='width:97%;height:40rpx;padding:10rpx;margin-top:5rpx;' type='text' placeholder-style="color:#e2e2e2;" />
            </view>
            <button form-type="submit" class='submit'>提 交</button>
          </view>
        </form>
      </view>
</view>